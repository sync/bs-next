{
  "name": "@dblechoc/bs-next",
  "version": "0.12.0",
  "description": "Minimal Next.js bindings written in ReasonML",
  "main": "src/Next.re",
  "types": "dist/types/Next.gen.d.ts",
  "author": "Anthony Mittaz",
  "license": "MIT",
  "scripts": {
    "build": "bsb -make-world",
    "start": "bsb -make-world -w",
    "clean": "bsb -clean-world",
    "test": "yarn build && jest",
    "format": "bsrefmt --in-place src/*.r*",
    "build-types": "tsc --emitDeclarationOnly",
    "preversion": "yarn clean && yarn format && yarn build-types && yarn test"
  },
  "files": [
    "src",
    "dist",
    "bsconfig.json"
  ],
  "keywords": [
    "react",
    "reason",
    "reason-react",
    "reasonml",
    "ocaml",
    "bucklescript",
    "next.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sync/bs-next.git"
  },
  "peerDependencies": {
    "bs-platform": "^5.0.6",
    "next": "^9.0.5",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "reason-react": "^0.7.0"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "0.4.9",
    "@types/node": "^12.7.3",
    "@types/react": "^16.9.2",
    "bs-platform": "^5.0.6",
    "bs-react-testing-library": "0.6.0",
    "gentype": "^2.38.0",
    "next": "9.0.5",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "reason-react": "0.7.0",
    "typescript": "^3.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/lib/js/__tests__/*_test.bs.js"
    ]
  }
}
